<body>
<% if flash[:notice] %>
<p class=success>
<%= flash[:notice] %>
<% end %>
<h1>Books</h1>
<table>
 <thead>
  <tr>
  	<th>Title</th>
  	<th>Body</th>
  	<th colspan="3"></th>
  </tr>
 </thead>
 <tbody>
 	<% @books.each do |book| %>
 	<tr>
 	 <td><%= book.title %></td>
 	 <td><%= book.body %></td>
 	 <td><%= link_to "Show",book_path(book) %></td>
 	 <td><%= link_to "Edit",edit_book_path(book) %></td>
 	 <td><%= link_to "Destroy",book_path(book),method: :delete,"data-confirm" => "Are you sure?" %>
 	</tr>
   <% end %>
 </tbody>
</table>

<h2>New book</h2>
<%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
 <div id="error_explanation">
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
  <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
  <% end %>
 <div class="field">
  <label>Title</label>
  <%= f.text_field :title, class: "new_title" %>
 </div>
 <div class="field">
  <label>Body</label>
  <%= f.text_area :body, class: "new_body" %>
 </div>
 <div class="action">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>

</body>
