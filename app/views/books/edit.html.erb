<body>
<%= form_for(@book) do |f| %>
 <% if @book.errors.any? %>
 <div id="error_explanation">
  <h2><%= @book.errors.count %> errors prohibited this book from being saved:</h2>
  <ul>
  <% @book.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>
  <% end %>
 <div class="field">
  <label>Title</label>
  <%= f.text_field :title, class: "new_title" %>
</div>
 <div class="field">
  <label>Body</label>
  <%= f.text_area :body, class: "new_body" %>
</div>
 <div class="action">
  <%= f.submit 'Create Book' %>
 </div>
<% end %>

<%= link_to "Show",book_path(@book) %> | 
<%= link_to "Back",books_path %>
</body>
